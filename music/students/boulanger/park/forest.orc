;						Fragments Of Forest;							- FOF Etude;									- Composed by  JooWon Park;										druntune@hotmail.com	sr        =         44100kr        =         4410ksmps     =         10nchnls    =         2#define REVERB	#garvb	=	garvb+(asig*irvbsnd)#garvb	init	0			instr	1 ; FOF rise and fallidur = p3iamp = ampdb(p4)ifreq = p5ipeak = p6iocta = p7iform = p8iformx = p9ipan = p10irvbsnd = p11kenv  linseg 0,idur*.2,1,idur*.8,1,idur*.2,0 ; ovrall ampkenv2  linseg .5,idur*0.2,ipeak,idur*0.8,0kocta line  1,idur,iocta ; octave changekform line iform,idur,iformx ; formant sweep;	 FOF	amp, fund,form,    oct,  band,  ris,   dur,dec, iolaps,ifna,ifnb,idurasig fof	iamp*kenv,ifreq*kenv2,kform, kocta, 0, .003, .017,.007, 200,   1, 2, idur$REVERB.	outs	asig*ipan,asig*(1-ipan)	 ;display  kenv2, idur	endin				instr	10 ; FOF w/o rise and fallidur = p3iamp = ampdb(p4)ifreq = p5iocta = p6iform = p7iformx = p8ipan = p9irvbsnd = p10kenv  linseg 0,idur*.2,1,idur*.8,1,idur*.2,0 ; ovrall ampkocta line  0,idur,iocta ; octave changekform line iform,idur,iformx ; formant sweep;	 FOF	amp, fund,form,    oct,  band,  ris,   dur,dec, iolaps,ifna,ifnb,idurasig fof	iamp*kenv,ifreq,kform, kocta, 0, .003, .017,.007, 200,   1, 2, idur$REVERB.	outs	asig*ipan,asig*(1-ipan)	endin				instr	11 ; FOF randomidur = p3iamp = ampdb(p4)ifreq = p5	ifreqx = p6irand = p7irvbsnd = p8kenv  linseg 0,idur*.2,1,idur*.7,.85,idur*.1,0 ; ovrall ampkrand randi irand,10,0,0,irand/4; random formantafund  expseg ifreq,idur*.7,ifreqx,idur*.3,ifreq*.85 ; freq shift;	 FOF	amp,     fund,  form,  oct, band,  ris,dur,dec, iolaps,ifna,ifnb,idurasig fof  iamp*kenv,afund,krand*kenv,0,0, .003, .017,.007, 200,   1, 2, idurkpan randi 1,4,0,0,1$REVERB.		outs	asig*kpan,asig*(1-kpan)		endin						instr 199 ; reverbidur	=	p3irvbtim	=	p4ihiatn	=	p5arvb	nreverb	garvb,irvbtim,ihiatn		outs	arvb,arvbgarvb	=	0		endin	