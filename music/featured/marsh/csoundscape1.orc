;================================================================; CSoundScape1.orc ;; AUTHOR:		Mike Marsh; DESCRIPTION:	Soundscape with a wash of noise and various ;			bleeps and bloops.; DATE:		4/15/2000 ;;================================================================;----------------------------------------------------------------; header;----------------------------------------------------------------sr 		= 		44100kr 		= 		4410ksmps 	= 		10nchnls 	= 		2; initialize global reverb variablesgarvbl	init 		0garvbr	init 		0;================================================================; reverb		instr	199	idur		=		p3irvbtim	=		p4ihiatn	=		p5arvb1		nreverb	garvbl, irvbtim, ihiatnarvb2		nreverb	garvbr, irvbtim, ihiatn		outs		arvb1, arvb2garvbl	=		0garvbr	=		0		endin;=============================; fm synth with stereo panning		instr 1idur		=		p3iamp		=		p4ipan		=		p5irvblvl	=		p6iatk		=		p7irel		=		p8kcps		=		p9kcar		=		p10kmod		=		p11kndx		=		p12ifn		=		p13k1		linen 	iamp, iatk, idur, irelasig		foscil	k1, kcps, kcar, kmod, kndx, ifnasigl		= 		asig * ipanasigr		= 		asig * (1 - ipan)		outs		asigl , asigr; send reverbgarvbl	= 		asigl * irvblvlgarvbr	= 		asigr * irvblvl		endin;====================================================; pluck synth, hard left and right panning and reverb		instr 2idur		=		p3iamp		=		p4ifrq		=		cpspch(p5)ipan		=		p6irvblvl	=		p7iatk		=		p8irel		=		p9k1		linen 	iamp, iatk, idur, irelasig		pluck		k1, ifrq, ifrq / 2, 2, 6asigl		= 		asig * ipanasigr		=		asig * (1 - ipan)		outs		asigl , asigr; send reverbgarvbl	= 		asigl * irvblvlgarvbr	= 		asigr * irvblvl		endin;==================================================; filtered white noise with stereo panning & Reverb		instr	3idur		=		p3iamp		=		p4ifrq		=		p5iatk		=		p6irel		=		p7icf1		=		p8icf2		=		p9ibw1		=		p10ibw2		=		p11ipan		=		p12irvblvl	=		p13kenv		linen 	iamp, iatk, idur, irelanoise	rand		ifrqkcf		expon		icf1, idur, icf2kbw		line		ibw1, idur, ibw2afilt		reson		anoise, kcf, kbw, 2asigl		=		(afilt * kenv) * ipanasigr		=		(afilt * kenv) * (1 - ipan)       	outs 		asigl, asigr; send reverbgarvbl	= 		asigl * irvblvlgarvbr	= 		asigr * irvblvl		endin;==================================; stereo granular pings with reverb		instr 4idur		=		p3iamp		=		p4ifrq		=		p5irvbgain 	=		p6asig1		grain 	iamp, ifrq,             .25, 8000, 30, .025, 1, 3, 1  ; asynchronous granular synthesisasig2		grain 	iamp, (ifrq / 2) + 100, .21, 8000, 30, .05,  1, 3, 1  ; asynchronous granular synthesis       	outs 		asig1, asig2; send reverbgarvbl 	= 		garvbl + asig1 * irvbgaingarvbr 	= 		garvbr + asig2 * irvbgain		endin